<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <bean id="systemConfigProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <list>
                <value>./config/defaults.conf</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true" />
    </bean>
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="properties" ref="systemConfigProperties" />
    </bean>
    <context:component-scan base-package="com.xincao.loginserver"/>
    <bean id="gameServerTable" class="com.xincao.loginserver.GameServerTable" init-method="load"/> 
    <bean id="bannedIpController" class="com.xincao.loginserver.controller.BannedIpController" init-method="load"/> 
    <import resource="mybatis.xml" />
</beans>